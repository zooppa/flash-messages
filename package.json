{
  "name": "@zooppa/flash-messages",
  "engines": {
    "node": ">=9.0.0",
    "yarn": "1.x"
  },
  "version": "0.9.1",
  "description": "A set of Redux reducers and actions to implement basic flash message functionality",
  "main": "dist/index.js",
  "scripts": {
    "test:single": "jest --verbose --coverage",
    "test": "jest --watch",
    "clean": "rimraf ./dist",
    "build": "npm run clean && webpack --display-optimization-bailout",
    "watch": "npm run clean && webpack --watch",
    "prepublishOnly": "npm run test:single && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test:single"
    }
  },
  "author": "Zooppa <techadmin@zooppa.com> (https://www.zooppa.com/)",
  "contributors": [
    "Marco Arduini <mar.arduini@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zooppa/flash-messages.git"
  },
  "keywords": [
    "redux",
    "flash",
    "messages"
  ],
  "bugs": {
    "url": "https://github.com/zooppa/flash-messages/issues"
  },
  "homepage": "https://github.com/zooppa/flash-messages#readme",
  "license": "MIT",
  "dependencies": {
    "shortid": "^2.2.14"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "10.x",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-preset-react": "^6.24.1",
    "deep-freeze": "^0.0.1",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.0.1",
    "eslint-plugin-flowtype": "3.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.x",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "redux": "^4.0.4",
    "redux-mock-store": "^1.5.3",
    "redux-thunk": "^2.3.0",
    "rimraf": "^3.0.0",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6",
    "webpack-node-externals": "^1.7.2"
  },
  "peerDependencies": {
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "files": [
    "README.md",
    "dist/",
    "src/"
  ]
}

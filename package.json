{
  "name": "@zooppa/flash-messages",
  "engines": {
    "node": ">=9.0.0",
    "yarn": "1.x"
  },
  "version": "0.11.0",
  "description": "A set of Redux reducers and actions to implement basic flash message functionality",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && webpack --display-optimization-bailout",
    "clean": "rimraf ./dist",
    "prepare": "install-peers",
    "prepublishOnly": "npm run test:single && npm run build",
    "test": "jest --watch",
    "test:single": "jest --verbose --coverage",
    "watch": "npm run clean && webpack --watch"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test:single"
    }
  },
  "author": "Zooppa <techadmin@zooppa.com> (https://www.zooppa.com/)",
  "contributors": [
    "Marco Arduini <mar.arduini@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zooppa/flash-messages.git"
  },
  "keywords": [
    "redux",
    "flash",
    "messages"
  ],
  "bugs": {
    "url": "https://github.com/zooppa/flash-messages/issues"
  },
  "homepage": "https://github.com/zooppa/flash-messages#readme",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-preset-react": "^6.24.1",
    "deep-freeze": "^0.0.1",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.0.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "husky": "^4.2.3",
    "install-peers-cli": "^2.2.0",
    "jest": "^26.4.0",
    "prettier": "^2.0.1",
    "redux": "^4.0.0",
    "redux-mock-store": "^1.5.3",
    "redux-thunk": "^2.3.0",
    "rimraf": "^3.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^2.5.1"
  },
  "peerDependencies": {
    "nanoid": "^3.1.12",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "files": [
    "README.md",
    "dist/",
    "src/"
  ]
}
